@model TTBackEnd.Shared.PaggerSettingModel

<script type="text/javascript">
    var glTable;
    $(document).ready(function () {
        glTable = $('#@Model.TableId').DataTable(
            {
                //"pagingType": "input",
                "language":
                {
                    "decimal": "",
                    "emptyTable": "Thông tin tìm kiếm không tồn tại trên hệ thống. Vui lòng thử lại kết quả khác",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                    "infoFiltered": "(filtered from _MAX_ total entries)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Show _MENU_ rows per page",
                    "loadingRecords": "Loading...",
                    "processing": "Processing...",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "<i class='fas fa-angle-right'></i>",
                        "previous": "<i class='fas fa-angle-left'></i>"
                    },
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    }
                },
                "dom": "<'row'<'col-sm-12 col-md-6'><'col-sm-12 col-md-6'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row pt-3 pb-3 pagging'<'col-sm-12 col-md-5 pl-3 pt-2'l><'#inputPage.col-sm-12 col-md-2'><'col-sm-12 col-md-5 pr-3'p>>",
                "serverSide": true, // for process server side
                "filter": false, // this is for disable filter (search box)
                "bSort": false,
                "ajax":
                {
                    "url": "@Model.AjaxLink",//"/Home/LoadData/",
                    "type": "POST",
                    "dataType": "JSON",
                    "contentType": "application/x-www-form-urlencoded",
                    "data": @Html.Raw(Model.Data),
                },
                "columns": @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Columns)),
                "lengthMenu": @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.PageSizeSetting)),
                fnDrawCallback: function(oSettings) {
                    if (oSettings._iRecordsTotal == 0) {
                        $(oSettings.nTableWrapper).find('.pagging').hide();
                    }
                    else {
                        $(oSettings.nTableWrapper).find('.pagging').show();
                    }
                }

            }
        );

        glTable.on('draw', function () {
            $("#lbTotalRows").html(glTable.page.info().recordsTotal);
        });

    });
</script>